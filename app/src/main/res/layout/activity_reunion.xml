<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReunionActivity">




        <!-- Lista de eventos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/event_recyclerview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="@id/event_recyclerview"
            app:layout_constraintBottom_toBottomOf="@id/event_recyclerview"
            app:layout_constraintStart_toStartOf="@id/event_recyclerview"
            app:layout_constraintEnd_toEndOf="@id/event_recyclerview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Imagen del evento -->
                <ImageView
                    android:id="@+id/event_imageview"
                    android:layout_width="63dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagen1" />

                <!-- Información del evento -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_weight="2">

                    <!-- Título y fecha del evento -->
                    <TextView
                        android:id="@+id/event_title_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Título del evento"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/event_date_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha del evento"
                        android:textSize="14sp"
                        android:textColor="@color/blue"/>

                    <!-- Descripción del evento -->
                    <TextView
                        android:id="@+id/event_description_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripción del evento"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"/>

                    <!-- Botón para ver más detalles del evento -->
                    <Button
                        android:id="@+id/event_details_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver detalles"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>